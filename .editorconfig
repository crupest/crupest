root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[gitconfig]
indent_style = tab
tab_width = 8

[*.md]
indent_size = 2
max_line_length = 80

[*.{sh,bash}]
indent_size = 2

[*.{html,css,js,ts}]
indent_size = 2

[*.{c,cpp,h}]
indent_size = 2

[*.{json,yaml,yml,yaml.template}]
indent_size = 2

[*.py]
profile = black
