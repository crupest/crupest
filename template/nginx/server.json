{
    "$schema": "./server.schema.json",
    "sites": [
        {
            "type": "reverse-proxy",
            "subdomain": "code",
            "upstream": {
                "name": "code-server",
                "server": "code-server:8080"
            }
        },
        {
            "type": "reverse-proxy",
            "subdomain": "timeline",
            "upstream": {
                "name": "timeline",
                "server": "timeline:5000"
            }
        },
        {
            "type": "static-file",
            "subdomain": "blog",
            "root": "/srv/blog"
        },
        {
            "type": "redirect",
            "subdomain": "github",
            "url": "https://github.com/crupest"
        },
        {
            "type": "cert-only",
            "subdomain": "mail"
        }
    ]
}