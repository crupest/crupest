server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ${CRUPEST_NGINX_SUBDOMAIN}.${CRUPEST_DOMAIN};

    return 301 ${CRUPEST_NGINX_URL}$request_uri;

}

server {
    listen 80;
    listen [::]:80;
    server_name ${CRUPEST_NGINX_SUBDOMAIN}.${CRUPEST_DOMAIN};

    return 301 ${CRUPEST_NGINX_URL}$request_uri;

    location /.well-known/acme-challenge {
        root /srv/acme;
    }
}
