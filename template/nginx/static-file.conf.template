server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;
    server_name ${CRUPEST_NGINX_SUBDOMAIN}.${CRUPEST_DOMAIN};

    root ${CRUPEST_NGINX_ROOT};

    client_max_body_size 5G;
}

server {
    listen 80;
    listen [::]:80;
    server_name ${CRUPEST_NGINX_SUBDOMAIN}.${CRUPEST_DOMAIN};

    location / {
        return 301 https://$host$request_uri;
    }
}
